<%= form_for @employee_image, :html => {:multipart => true}, :url => { :action => 'save_photo'} do |f| %>
 <p>
    <%= f.label :photo_name %><br />
    <%= f.text_field :photo_name %>
  </p>
  <p>
    <%= f.file_field :profimage %>
  </p>
  <p>
    <%= f.label :remote_profimage_url, "or image URL" %><br />
    <%= f.text_field :remote_profimage_url %>
  </p>
  <p><%= f.submit %></p>
<% end %>

